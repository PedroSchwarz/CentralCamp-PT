<% include ../partials/header %>
<link rel="stylesheet" href="/stylesheets/footer-clean.css"></link>

<div class="container text-center">
    <header class="jumbotron">
        <div class="container">
            <h1>Bem-vindo ao YelpCamp!</h1>
            <p>Visualize todos os acampamentos do mundo inteiro registrados no site!</p>
            <p><a class="btn btn-outline-primary" href="/campgrounds/new">Adicionar Novo Acampamento</a></p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12 text-center">
            <h3 id="divider-h3">Os Acampamentos Mais Populares!</h3>
        </div>
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-sm-12 col-md-3">
                <div class="card border-secondary">
                    <img class="card-img-top" src="<%= campground.image %>"></img>
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                    </div>
                    <div class="card-footer">
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-info">Mais Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

