<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12 text-center">
            <h1>Criar um Novo Acampamento</h1>
        </div>
        <div class="col-sm-12 col-md-5">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Nome"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="Url imagem"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="Descrição"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="Preço por noite" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" id="location" name="campground[location]" placeholder="Ex.: Yosemite National Park, CA"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Criar Acampamento</button>
                </div>
            </form>
            <a class="btn btn-danger btn-sm" href="/campgrounds">Voltar</a>
         </div>
    </div>
</div>

<% include ../partials/footer %>